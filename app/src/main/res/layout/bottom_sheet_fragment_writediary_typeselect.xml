<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_ivory_radius_top_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectDiaryHeadTextView"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:enabled="false"
            style="@style/BCaption"
            android:gravity="center_vertical|center"
            android:text="@string/bottom_sheet_head_text"
            android:textColor="@color/text_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_brown" />

        <TextView
            android:id="@+id/selectAloneDiaryButton"
            style="@style/MCaption2"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/background_ivory"
            android:gravity="center_vertical|center"
            android:text="@string/bottom_sheet_type_alone_text"
            android:textColor="@color/text_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_brown" />

        <TextView
            android:id="@+id/selectCommentDiaryButton"
            style="@style/MCaption2"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/background_ivory"
            android:gravity="center_vertical|center"
            android:text="@string/bottom_sheet_type_comment_text"
            android:textColor="@color/text_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_brown" />

        <TextView
            android:id="@+id/submitButton"
            style="@style/BSubheadline"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@color/background_ivory"
            android:gravity="center_vertical|center"
            android:text="@string/submit"
            android:textColor="@color/text_black" />


    </LinearLayout>

</layout>