<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/codeSendTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="32dp"
        android:text="@string/onboarding_send_email_notice"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/codeEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        app:layout_goneMarginBottom="48dp"
        android:id="@+id/codeEditText"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="43dp"
        android:autofillHints="no"
        android:background="@drawable/onboarding_edittext_rectangle"
        android:inputType="numberPassword"
        android:paddingStart="14dp"
        android:textColor="@color/coda_common_text"
        app:layout_constraintBottom_toTopOf="@id/codeInCorrectTextView"
        app:layout_constraintEnd_toEndOf="@id/codeSendTextView"
        app:layout_constraintStart_toStartOf="@id/codeSendTextView"
        app:layout_constraintTop_toBottomOf="@id/codeSendTextView"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/codeInCorrectTextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/onboarding_code_incorrect"
        android:textAlignment="center"
        android:textColor="@color/onboarding_red"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/cancelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/onboarding_dialog_button_left_top_border"
        android:text="@string/cancel"
        android:textColor="@color/text_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/submitButton"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@drawable/onboarding_dialog_button_left_top_border"
        android:text="@string/submit"
        android:textColor="@color/text_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancelButton" />

</androidx.constraintlayout.widget.ConstraintLayout>